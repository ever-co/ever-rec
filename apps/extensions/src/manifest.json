{
  "name": "Ever Rec - Screen Capture, Screen Recording, Images & Video Sharing Platform",
  "short_name": "Rec",
  "version": "{{version}}",
  "description": "",
  "author": "Ever Co. LTD",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "storage",
    "desktopCapture",
    "downloads",
    "downloads.shelf",
    "tabCapture",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "{{name}}",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "all_frames": false,
      "match_about_blank": true,
      "match_origin_as_fallback": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.html",
        "images/*",
        "fonts/*",
        "*/install.html",
        "firebase/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://api.rec.so/*",
      "https://app.rec.so/*",
      "http://localhost:3000/*",
      "http://localhost:4200/*"
    ]
  },
  "key": ""
}
