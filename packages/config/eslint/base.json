{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended",
    "turbo"
  ],
  "rules": {
    "no-console": "warn",
    "eqeqeq": ["warn", "always"],
    "prettier/prettier": "error"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["node_modules/", "dist/", "build/", "*.min.js"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      }
    }
  }
}
