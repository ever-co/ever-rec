{
  "name": "ever-rec",
  "version": "0.1.0",
  "description": "Ever Rec - Screen Capture, Screen Recording, Images & Video Sharing Platform",
  "license": "AGPL-3.0",
  "homepage": "https://rec.so",
  "repository": {
    "type": "git",
    "url": "https://github.com/ever-co/ever-rec.git"
  },
  "bugs": {
    "url": "https://github.com/ever-co/ever-rec/issues"
  },
  "private": true,
  "author": {
    "name": "Ever Co. LTD",
    "email": "ever@ever.co",
    "url": "https://ever.co"
  },
  "scripts": {
    "prepare:husky": "npx husky install .husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:manual": "yarn build:api && yarn build:admin && yarn build:portal && yarn build:website",
    "start:api": "turbo run dev --filter=api",
    "build:api": "turbo run build --filter=api",
    "seed": "yarn ts-node -r tsconfig-paths/register --project ./apps/api/tsconfig.json apps/api/src/seeder.ts",
    "seed:refresh": "yarn seed --refresh",
    "start:portal": "turbo run dev --filter=portal",
    "build:portal": "turbo run build --filter=portal",
    "start:admin": "turbo run dev --filter=admin",
    "build:admin": "turbo run build --filter=admin",
    "test:website": "turbo run test --filter=website",
    "test:portal": "turbo run test --filter=portal",
    "test:admin": "turbo run test --filter=admin",
    "e2e": "turbo run e2e",
    "sdk:generate": "yarn graphql-codegen --config ./apps/api/src/schemas/codegen.yml",
    "sdk:watch": "yarn sdk:generate --watch",
    "affected:apps": "turbo run affected --filter=apps",
    "affected:libs": "turbo run affected --filter=libs",
    "affected:build": "turbo run affected:build",
    "affected:e2e": "turbo run affected:e2e",
    "affected:test": "turbo run affected:test",
    "affected:lint": "turbo run affected:lint",
    "affected:dep-graph": "turbo run affected:dep-graph",
    "affected": "turbo run affected",
    "update": "turbo run migrate latest",
    "workspace-generator": "turbo run workspace-generator",
    "dep-graph": "turbo run dep-graph",
    "help": "turbo run help",
    "prepare": "husky install",
    "test": "yarn --version"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.9",
    "pretty-quick": "^4.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^22.0.12",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18",
    "yarn": ">=1.13.0"
  },
  "packageManager": "yarn@1.22.19",
  "snyk": true,
  "dependencies": {
    "dotenv-cli": "^7.4.2"
  }
}
