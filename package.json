{
	"name": "ever-rec",
	"version": "0.1.0",
	"description": "Ever Rec - Screen Capture, Screen Recording, Images & Video Sharing Platform",
	"license": "AGPL-3.0",
	"homepage": "https://rec.so",
	"repository": {
		"type": "git",
		"url": "https://github.com/ever-co/ever-rec.git"
	},
	"bugs": {
		"url": "https://github.com/ever-co/ever-rec/issues"
	},
	"private": true,
	"author": {
		"name": "Ever Co. LTD",
		"email": "ever@ever.co",
		"url": "https://ever.co"
	},
	"scripts": {
		"prepare:husky": "npx husky install .husky",
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"type-check": "turbo type-check",
		"clean": "turbo clean",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:manual": "yarn build:api && yarn build:admin && yarn build:portal && yarn build:website",
    "start:website": "nx serve website",
    "build:website": "nx build website",
    "export:website": "nx export website",
    "start:api": "nx serve api",
    "build:api": "nx build api",
    "seed": "yarn ts-node -r tsconfig-paths/register --project ./apps/api/tsconfig.json apps/api/src/seeder.ts",
    "seed:refresh": "yarn seed --refresh",
    "start:portal": "nx serve portal",
    "build:portal": "nx build portal",
    "start:admin": "nx serve admin",
    "build:admin": "nx build admin",
    "test:website": "nx test website",
    "test:portal": "nx test portal",
    "test:admin": "nx test admin",
    "e2e": "nx e2e",
    "sdk:generate": "yarn graphql-codegen --config ./apps/api/src/schemas/codegen.yml",
    "sdk:watch": "yarn sdk:generate --watch",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help"
	},
  "private": true,
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*",
      "packages/*",
      "tools"
    ],
    "nohoist": []
  },
	"devDependencies": {
		"@ever-rec/typescript-config": "*",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-react": "^7.31.8",
		"husky": "^9.0.11",
		"prettier": "^3.2.5",
		"prettier-eslint-cli": "^8.0.1",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"pretty-quick": "^4.0.0",
		"rimraf": "^5.0.5",
		"semantic-release": "^22.0.12",
		"turbo": "latest"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged pretty-quick --no-verify --staged"
		}
	},
	"engines": {
		"node": ">=18",
		"yarn": ">=1.13.0"
	},
	"packageManager": "yarn@1.22.19",
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"semi": true,
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "always",
		"trailingComma": "none",
		"quoteProps": "as-needed",
		"trimTrailingWhitespace": true,
		"overrides": [
			{
				"files": "*.scss",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			},
			{
				"files": "*.yml",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"snyk": true
}
