{
	"name": "ever-rec",
	"version": "0.1.0",
	"description": "Ever Rec - Screen Capture, Screen Recording, Images & Video Sharing Platform",
	"license": "AGPL-3.0",
	"homepage": "https://rec.so",
	"repository": {
		"type": "git",
		"url": "https://github.com/ever-co/ever-rec.git"
	},
	"bugs": {
		"url": "https://github.com/ever-co/ever-rec/issues"
	},
	"private": true,
	"author": {
		"name": "Ever Co. LTD",
		"email": "ever@ever.co",
		"url": "https://ever.co"
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"type-check": "turbo type-check",
		"clean": "turbo clean",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"build:extensions": "pnpm build --filter=ever-rec-extension",
		"prepare:husky": "pnpx husky install .husky",
		"build:manual": "pnpm build:api && pnpm build:admin && pnpm build:portal && pnpm build:website",
		"seed": "pnpm ts-node -r tsconfig-paths/register --project ./apps/api/tsconfig.json apps/api/src/seeder.ts",
		"seed:refresh": "pnpm seed --refresh",
		"sdk:generate": "pnpm graphql-codegen --config ./apps/api/src/schemas/codegen.yml",
		"sdk:watch": "pnpm sdk:generate --watch"
	},
	"workspaces": {
		"packages": [
			"libs/*",
			"apps/*",
			"packages/*",
			"tools"
		],
		"nohoist": []
	},
	"devDependencies": {
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-react": "^7.31.8",
		"husky": "^9.0.11",
		"prettier": "^3.2.5",
		"prettier-eslint-cli": "^8.0.1",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"pretty-quick": "^4.0.0",
		"rimraf": "^5.0.5",
		"semantic-release": "^22.0.12",
		"turbo": "^2.2"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged pretty-quick --no-verify --staged"
		}
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=9.9.0"
	},
	"packageManager": "pnpm@9.9.0",
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"semi": true,
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "always",
		"trailingComma": "none",
		"quoteProps": "as-needed",
		"trimTrailingWhitespace": true,
		"overrides": [
			{
				"files": "*.scss",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			},
			{
				"files": "*.yml",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"snyk": true
}
